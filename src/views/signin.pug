extends index

block body
        .text-center
        main.form-signin
            form(action="/signin" method="POST")
                h1.h3.mb-3.fw-normal Connectez-vous
                label.visually-hidden(for="inputLogin")
                input.form-control#inputLogin(type="text" placeholder="Identifiant" name="login" required="required" autofocus="" autocomplete="off")

                label.visually-hidden(for="inputPassword") Mot de passe
                input.form-control#inputPassword(type="password" name="password" placeholder="Mot de passe" required="" autocomplete="off")

                button.w-100.btn-lg.btn-primary(type="submit") Connexion

            if(error)
                ul
                    li= error